<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/background_dialog"
        android:layout_width="400dp"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_max_number_pages"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="@string/number_page"
                android:fontFamily="@font/museo_cyrl"
                android:background="@drawable/background_text_dialog"
                android:textColor="#232223"
                android:textColorHint="#ffffff"
                android:maxLength="10"
                android:ems="10"/>

            <EditText
                android:id="@+id/edit_max_depth"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="@string/depth_parse"
                android:fontFamily="@font/museo_cyrl"
                android:background="@drawable/background_text_dialog"
                android:textColor="#232223"
                android:textColorHint="#ffffff"
                android:maxLength="10"
                android:enabled="false"
                android:ems="10"/>

        </LinearLayout>

        <Switch
            android:id="@+id/switch_is_depth"
            android:layout_toStartOf="@id/button_ok"
            android:layout_below="@id/layout_text"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/button_ok"
            android:layout_below="@id/layout_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/museo_cyrl"
            android:textColor="#e7e7e7"
            android:textSize="22sp"
            android:text="@string/ok"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/background_button_dialog" />

    </RelativeLayout>

</RelativeLayout>